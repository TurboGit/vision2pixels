IMPLIB=libMagickWand.dll.a libMagickCore.dll.a libjpeg.dll.a

ifeq ($(OS), Windows_NT)
build-import-libs: $(IMPLIB)
else
build-import-libs:
endif

build: build-import-libs

clean:
	$(RM) -f *.a

setup:

runtests:

$(IMPLIB):
	dlltool --def ${@:%.a=%}.def --output-lib $@
