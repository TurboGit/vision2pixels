@@-- @@INCLUDE@@ babel.thtml

@@IF@@ @_LOGIN_@ = ""
@@-- Login failed
<response>
   <replace id="status_bar">Erreur ! Impossible de se connecter</replace>
   <apply_style id="status_bar">
     <attribute id="display" value="block" />
   </apply_style>
</response>
@@ELSE@@
@@-- Login OK
<response>
   <apply_style id="status_bar">
     <attribute id="display" value="none" />
   </apply_style>
   <replace id="login">
     Bienvenue @_LOGIN_@
   </replace>
</response>
@@END_IF@@
