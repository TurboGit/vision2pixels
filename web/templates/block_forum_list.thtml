@@IF@@ @_FOR_SELECT_@
  @@IF@@ @_FID'LENGTH_@ = 1
    @_FORUM_NAME_@
  @@ELSE@@
    <select name="FORUM" id="sel_forum_list">
      <option value="x">@_BABEL_SELECT_FORUM_@</option>
      @@TABLE@@
      <option value="@_FID_@">@_FORUM_NAME_@</option>
      @@END_TABLE@@
    </select>
  @@END_IF@@
@@ELSE@@
  @@TABLE@@
  <a href="/forum/threads?FID=@_FID_@">@_FORUM_NAME_@</a> ::
  @@END_TABLE@@
@@END_IF@@
