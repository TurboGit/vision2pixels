@@INCLUDE@@ babel.thtml
@@--
@@IF@@ @_LOGIN_@ = ""
<form method="post" id="login_form" action="">
<fieldset>
<legend>@_BABEL_ASK_AUTHENTICATION_@</legend>
<p>
<label for="login_input">Login</label>
<input id="login_input" name="LOGIN" type="text"
value="@_BABEL_LOGIN_DEFAULT_VALUE_@" size="15"/></p>
<p><label for="password_input">Password</label>
<input id="password_input" name="PASSWORD" type="password"
value="@_BABEL_LOGIN_DEFAULT_PASSWORD_@" size="15"/></p>
<p><input name="ENTER" id="login_form_enter" type="submit"
value="OK"/></p>
<p><a href="my">Cr√©er/Modifier votre compte</p>
</fieldset>
</form>
@@ELSE@@
<div id="logged_box">
<p class="logged_as">@_BABEL_LOGGED_AS_@ @_LOGIN_@ </p>
<p><a href="@_FORUM_POST_URL_@">@_BABEL_NEW_POST_@</a></p>
<p><a id="logout_enter" href="#">@_BABEL_LOGOUT_@</a></p>
</div>
@@-- <input name="LOGOUT" id="logout_enter" type="submit" value="@_BABEL_LOGOUT_@"/>
</p>
@@END_IF@@
