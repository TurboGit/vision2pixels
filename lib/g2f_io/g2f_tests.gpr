with "../../shared";
with "g2f";

project G2F_Tests is

   for Source_Dirs use ("tests");
   for Object_Dir use "obj";
   for Main use ("g2f_test.adb");

   --------------
   -- Compiler --
   --------------

   package Compiler renames Shared.Compiler;

   ------------
   -- Linker --
   ------------

   package Linker is
      case Shared.OS is
         when "Windows_NT" =>
            for Default_Switches ("Ada") use ("-lMagick", "-lgdi32");
         when others =>
            null;
      end case;
   end Linker;

end G2F_Tests;
