# Options

INSTALL=$(HOME)/opt/v2p

ifeq ("$ARGWIAD_ROOT", "")
ARGWIAD_ROOT=$HOME/opt/gwiad
endif

GWIAD_ROOT=$(ARGWIAD_ROOT)
MODE=Debug

GNAT_ROOT=$(dir $(shell which gnatls))..
GWIAD_INSTALL=$(GNAT_ROOT)/lib/gwiad
DIOUZHTU_DYNAMIC_LIB=$(GNAT_ROOT)/share/diouzhtu/dlib

ifeq ($(OS),Windows_NT)
EXEXT=.exe
SOEXT=.dll
else
EXEXT=
SOEXT=.so
endif

CP=cp -p
MKDIR=mkdir -p
RM=rm -f
TAR_DIR=tar czf
DIFF=diff
GNAT=gnat
