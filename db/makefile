# Targets

LOGFILE := ${shell pwd}/test/db_harness.log.${shell date +%Y%m%d-%H%M%S}

ifeq ("$(DISTRIB)/dist","$(GWIAD_ROOT)")
DBNAME=v2p.db
BSCRIPT=create_database.sh
else
DBNAME=testing.db
BSCRIPT=create_test_database.sh
endif

build:
	$(GNAT) make -XPRJ_BUILD=$(MODE) -Pdb_test

check:
	$(GNAT) check -dd -Pdb_test -rules -from=../v2p.check

setup:
	$(MKDIR) obj

install: create_db
	-$(MKDIR) $(GWIAD_ROOT)/plugins/vision2pixels/db
	(cd data; $(CP) $(DBNAME) $(GWIAD_ROOT)/plugins/vision2pixels/db)

create_db:
	(cd data; ./$(BSCRIPT))

run_tests:
	(cd test; ../obj/db_harness > $(LOGFILE))
	-grep "Failed Assertions" $(LOGFILE) >> $(LOG)
	-grep "Unexpected Errors" $(LOGFILE) >> $(LOG)

runtests: create_db run_tests

clean:
	-$(GNAT) clean -XPRJ_Build=$(MODE) -Pdb_test
	-$(RM) test/*.res test/db_harness.log.* data/*.db
